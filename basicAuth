function authUser(req, res, next) {
  if (req.user == null) {
    res.status(401);
    return res.send("you need to sign in");
  }
  next();
}

function authRole(role) {
  return (req, res, next) => {
    if (req.staff.role !== role) {
      res.status(401);
      return res.send("Not allowed");
    }
    next();
  };
}

module.exports = { authUser, authRole };
